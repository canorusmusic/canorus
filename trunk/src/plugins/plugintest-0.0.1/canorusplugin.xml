<plugin>
	<canorus-version>0.2.0</canorus-version>
	<name>plugintest</name>
	<description>Plugintest - Harmony analysis tools</description>
	<version>0.0.1</version>
	<author>Canorus team</author>
	<description lang="sl_SI">Orodja za analizo harmonije</description>

	<home-url>http://harmonia.berlios.de</home-url>
	<update-url>http://www.canorus.org/harmonia/harmoniaUpdate.xml</update-url>

	<action>
		<name>haInit</name>
		<on-action>onInit</on-action>
		<lang>python</lang>
		<filename>init.py</filename>
		<function>init</function>
	</action>

	<action>
		<name>haExportFunctionMarkings</name>
		<export-filter>Harmonia function markings (*.ha)</export-filter>
		<export-filter lang="sl_SI">Harmonia dokument funkcijskih oznaƒçb (*.ha)</export-filter>
		<lang>python</lang>
		<filename>export.py</filename>
		<function>export</function>
		<args>export-filename</args>
	</action>
	
	<menu>
		<name>haHarmonyAnalysisMenu</name>
		<title>Harmony analysis</title>
		<title lang="sl_SI">Harmonska analiza</title>
	</menu>
	
	<action>
		<parent-menu>haHarmonyAnalysisMenu</parent-menu>
		<name>haAnalyseScore</name>
		<text>Analyse current sheet</text>
		<text lang="sl_SI">Analiziraj trenutni list</text>
		<lang>python</lang>
		<filename>analysis.py</filename>
		<function>analyse</function>
		<args>sheet</args>
	</action>
</plugin>
